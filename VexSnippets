\\ Remap Min to Max Point Attributes
string a = "reduction";
float r = 10000;
float min = r;
float max = -r;

// get min and max attribute values
for(int i = 0; i < @numpt; i++)
{
    float x = pointattrib(0,a, i, 1);
    if (x < min) min = x;
    if (x > max) max = x;
}

// remap attribute between 0 and 1
for(int i = 0; i < @numpt; i++)
{
    float x = pointattrib(0,a, i, 1);
    float y = fit(x, min, max, 0, 1);
    
    setpointattrib(0, a, i, y);
}
